<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.biz.friend.persistence.FriendDao">
 	
 	<update id="update" parameterType="friendVO">
		UPDATE `tbl_friend`
		SET
		`f_name` = #{f_name},
		`f_tel` = #{f_tel},
		`f_addr` = #{f_addr},
		`f_hobby` = #{f_hobby},
		`f_relat` = #{f_relat}
		WHERE `f_id` = #{f_id};

 	</update>
 
 </mapper> 